replicaCount: 1

image:
  repository: octoprint/octoprint
  tag: latest

service:
  port: 5000

hostname: 'your-octopi-hostname' # example for local working octopi.server
hostPath:
  data: 'your-data-path'  # example /home/user/data/
  config: 'base-config-path' # example /home/user/octoprint-helm/config.yaml

persistence:
  enabled: true
  existingClaim: "" # If you have an existing PVC, provide the name here
  storageClassName: "standard" # StorageClass to use for PVC provisioning
  accessMode: "ReadWriteOnce"
  size: "5Gi"

